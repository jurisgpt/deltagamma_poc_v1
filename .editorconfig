# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
shell = bash
indent_style = tab
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Dockerfiles
[Dockerfile*]
indent_style = space
indent_size = 4

# TOML files
[*.toml]
indent_style = space
indent_size = 4
